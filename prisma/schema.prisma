// This is your Prisma schema file for SolarVoice AI Platform
// Using Neon PostgreSQL database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// User Management
model User {
  id               String    @id @default(cuid())
  email            String    @unique
  hashedPassword   String
  firstName        String
  lastName         String
  role             UserRole  @default(CUSTOMER)
  company          String?
  phone            String?
  isVerified       Boolean   @default(false)
  verificationToken String?  @unique
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  
  // User preferences
  preferences      Json      @default("{}")
  
  // Timestamps
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  lastLogin        DateTime?
  loginCount       Int       @default(0)
  
  // Relations
  projects         SolarProject[]
  voiceInteractions VoiceInteraction[]
  payments         Payment[]
  agentSessions    AgentSession[]
  
  @@index([email])
  @@index([role])
}

enum UserRole {
  CUSTOMER
  CONTRACTOR
  ADMIN
  FIELD_WORKER
}

// Solar Project Management
model SolarProject {
  id               String    @id @default(cuid())
  name             String
  address          String
  systemSize       Float     // in kW
  projectType      ProjectType
  status           ProjectStatus @default(PLANNING)
  
  // Project details
  latitude         Float?
  longitude        Float?
  estimatedCost    Float?
  actualCost       Float?
  completionDate   DateTime?
  
  // Relations
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  voiceCommands    VoiceInteraction[]
  tasks            ProjectTask[]
  
  // Timestamps
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  @@index([userId])
  @@index([status])
}

enum ProjectType {
  RESIDENTIAL
  COMMERCIAL
  UTILITY_SCALE
}

enum ProjectStatus {
  PLANNING
  PERMITTING
  INSTALLATION
  INSPECTION
  COMPLETED
  CANCELLED
}

// Project Tasks
model ProjectTask {
  id               String    @id @default(cuid())
  title            String
  description      String?
  status           TaskStatus @default(PENDING)
  priority         Priority   @default(MEDIUM)
  dueDate          DateTime?
  completedAt      DateTime?
  
  // Relations
  projectId        String
  project          SolarProject @relation(fields: [projectId], references: [id])
  assignedToId     String?
  assignedTo       User?     @relation(fields: [assignedToId], references: [id])
  
  // Timestamps
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  @@index([projectId])
  @@index([assignedToId])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  BLOCKED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// Voice Interaction Logs
model VoiceInteraction {
  id               String    @id @default(cuid())
  command          String
  transcription    String?
  response         String?
  emotion          String?
  confidence       Float?
  duration         Int?      // in milliseconds
  
  // Relations
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  projectId        String?
  project          SolarProject? @relation(fields: [projectId], references: [id])
  
  // Metadata
  deviceType       String?
  location         Json?
  
  // Timestamps
  createdAt        DateTime  @default(now())
  
  @@index([userId])
  @@index([projectId])
  @@index([createdAt])
}

// Payment Records
model Payment {
  id               String    @id @default(cuid())
  amount           Float
  currency         String    @default("USD")
  status           PaymentStatus @default(PENDING)
  stripePaymentId  String?   @unique
  stripeCustomerId String?
  description      String?
  
  // Payment details
  paymentMethod    PaymentMethod?
  metadata         Json?
  
  // Relations
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  subscriptionId   String?
  subscription     Subscription? @relation(fields: [subscriptionId], references: [id])
  
  // Timestamps
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  paidAt           DateTime?
  
  @@index([userId])
  @@index([status])
  @@index([stripePaymentId])
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentMethod {
  CARD
  BANK_TRANSFER
  ACH
  BNPL
}

// Subscriptions
model Subscription {
  id               String    @id @default(cuid())
  tier             SubscriptionTier @default(BASIC)
  status           SubscriptionStatus @default(ACTIVE)
  stripeSubscriptionId String? @unique
  
  // Subscription details
  startDate        DateTime  @default(now())
  endDate          DateTime?
  cancelledAt      DateTime?
  
  // Relations
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  payments         Payment[]
  
  // Timestamps
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  @@index([userId])
  @@index([status])
}

enum SubscriptionTier {
  BASIC
  PROFESSIONAL
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  SUSPENDED
}

// AI Agent Sessions
model AgentSession {
  id               String    @id @default(cuid())
  agentType        String
  sessionData      Json
  duration         Int?      // in seconds
  tokensUsed       Int?
  
  // Relations
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  
  // Timestamps
  startedAt        DateTime  @default(now())
  endedAt          DateTime?
  
  @@index([userId])
  @@index([agentType])
  @@index([startedAt])
}

// Webhook Events (for auditing)
model WebhookEvent {
  id               String    @id @default(cuid())
  source           String    // stripe, retell, elevenlabs
  eventType        String
  payload          Json
  processed        Boolean   @default(false)
  error            String?
  
  // Timestamps
  createdAt        DateTime  @default(now())
  processedAt      DateTime?
  
  @@index([source])
  @@index([processed])
  @@index([createdAt])
}