{
  "singleQuote": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "printWidth": 120,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "insertPragma": false,
  "jsxSingleQuote": true,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "useTabs": false,
  "embeddedLanguageFormatting": "auto",
  "singleAttributePerLine": false,
  "overrides": [
    {
      "files": "shared/**/*.ts",
      "options": {
        "printWidth": 140,
        "tabWidth": 2,
        "bracketSpacing": true,
        "semi": true,
        "trailingComma": "none"
      }
    },
    {
      "files": "**/*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "always"
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "printWidth": 100,
        "tabWidth": 2
      }
    }
  ]
}