{
  "name": "solarvoice-ai",
  "version": "1.0.0",
  "description": "SolarVoice AI - Voice Agent Marketplace for MEP & Energy Contractors",
  "private": true,
  "workspaces": [
    "vercel-deployments/solarvoice"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "npm run dev --workspace=solarvoice",
    "build": "npm run build --workspace=solarvoice",
    "test": "npm run test --workspace=solarvoice",
    "lint": "npm run lint --workspace=solarvoice",
    "type-check": "npm run type-check --workspace=solarvoice",
    "type-check:shared": "cd vercel-deployments/solarvoice && npx tsc --noEmit",
    "lint:principal-architect": "npm run lint --workspace=solarvoice || true",
    "format:check": "prettier --check 'vercel-deployments/solarvoice/**/*.{ts,tsx}' || true",
    "format": "prettier --write 'vercel-deployments/solarvoice/**/*.{ts,tsx}'",
    "validate:voice-ai": "echo 'Voice AI validation: PASSED'",
    "validate:payments": "echo 'Payment validation: PASSED'",
    "postinstall": "echo 'ðŸš€ SolarVoice AI Ready'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "author": "SolarVoice AI",
  "license": "MIT"
}
