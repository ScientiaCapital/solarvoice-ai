# =============================================================================
# SolarVoice AI Platform - Environment Variables
# =============================================================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================

# Main database connection URL (for Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/solarvoice

# Direct database URL (for migrations)
DIRECT_DATABASE_URL=postgresql://user:password@localhost:5432/solarvoice

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# AI Services
# =============================================================================

# Anthropic
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# ElevenLabs
ELEVENLABS_API_KEY=el_xxxxxxxxxxxxxxxxxxxxx
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL_ID=eleven_monolingual_v1

# Google Services
GOOGLE_SOLAR_API_KEY=your-google-solar-api-key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# Feature Flags
# =============================================================================

NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
FEATURE_VOICE_COMMANDS=true
FEATURE_AI_AGENTS=true
FEATURE_REALTIME_SYNC=true
FEATURE_MULTI_TENANT=true

# =============================================================================
# API Configuration
# =============================================================================

NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_SECRET_KEY=your-api-secret-key

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# Logging & Debugging
# =============================================================================

LOG_LEVEL=info
DEBUG=false